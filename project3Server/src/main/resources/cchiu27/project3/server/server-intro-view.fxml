<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cchiu27.project3.server.controllers.ServerIntroController"
      spacing="15" alignment="CENTER"
      stylesheets="@styles.css">

    <Label text="3-Card Poker Server" styleClass="title-label"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Port:"/>
        <TextField fx:id="portField" promptText="e.g. 5555" prefWidth="120"/>
    </HBox>

    <Button text="Start Server" fx:id="startButton" onAction="#handleStartServer"/>

</VBox>
